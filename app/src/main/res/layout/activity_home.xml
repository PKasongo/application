<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:layout_gravity="center"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/niveauCiterne"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:indeterminateOnly="false"
                android:rotation="180"

                android:progress="0"

                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/niv_citern"

                />
            <TextView
                android:id="@+id/texte_niv_citerne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="0 %"
                android:textColor="@color/bleu_ciel"
                android:textAlignment="center"
                android:layout_gravity="center"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESERVOIR"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 % = 1 m3"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 % = 3000 m3"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/debimetre"
                android:layout_gravity="center"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEBIT [ litre/minute ]"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:id="@+id/debit_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="30dp"
                        android:textColor="@color/bleu_ciel"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    >
                    <TextView
                        android:id="@+id/debit_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="30dp"
                        android:textColor="@color/vert"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/gp_motopompe"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GP MOTOPOMPE"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:paddingStart="10dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/btn_pompe1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/thumb_pompe"
                    app:track="@drawable/track_pompe"
                    app:showText="true"
                    android:gravity="center"
                    android:textOff="OFF"
                    android:textOn="ON"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/btn_pompe2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/thumb_pompe2"
                    app:track="@drawable/track_pompe2"
                    app:showText="true"
                    android:gravity="center"
                    android:textOff="OFF"
                    android:textOn="ON"
                    android:paddingStart="20dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/vanna_motorise"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VANNES"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:paddingStart="10dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/btn_vanne1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/thumb_pompe"
                    app:track="@drawable/track_pompe"
                    app:showText="true"
                    android:gravity="center"
                    android:textOff="OFF"
                    android:textOn="ON"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/btn_vanne2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/thumb_pompe2"
                    app:track="@drawable/track_pompe2"
                    app:showText="true"
                    android:gravity="center"
                    android:textOff="OFF"
                    android:textOn="ON"
                    android:paddingStart="20dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/bleu_ciel"
            android:foregroundGravity="center"
            android:layout_gravity="center">
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EntrÃ©e"
            android:textSize="15dp"
            android:textColor="@color/bleu_ciel"
            android:paddingStart="10dp"
            android:layout_gravity="center"
            />

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/vert"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center">
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sortie"
            android:textSize="15dp"
            android:textColor="@color/vert"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />

        <ImageButton
            android:id="@+id/btn_arret"
            android:background="@drawable/btn_arret"
            android:src="@drawable/caution"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            />
    </LinearLayout>

</LinearLayout>